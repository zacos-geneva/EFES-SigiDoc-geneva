<ab><lb n="0"/>  <persName type="aphrodisian" full="yes"><name reg="Τίτος" type="praenomen"><supplied reason="lost">Τίτος</supplied></name>  <name reg="Φλάβιος"><supplied reason="lost">Φλάβιος</supplied></name>  <name reg="Σταβεριανός"><supplied reason="lost">Στα</supplied><lb n="1" type="worddiv"/>βεριανὸς</name></persName> <w lemma="ὁ">τὸν</w> <persName type="divine" full="yes">Ἀσ<lb n="2" type="worddiv"/>κλεπιὸν</persName> <w lemma="καί">καὶ</w> <w lemma="ὁ">τ<hi rend="ligature">ὴν</hi></w><lb n="3"/><persName type="divine" full="yes"><name>Ὑγείαν</name></persName> <w lemma="σύν">σὺν</w> <w lemma="ὁ">τοὺς</w> <lb n="4"/> <w lemma="βωμός">βωμοὺς</w> <w lemma="ἐκ">ἐκ</w> <w lemma="ὁ">τῶν</w> <w>φι<lb n="5" type="worddiv"/>δίων</w> <w lemma="ἀνατίθημι">ἀνέθηκε</w> <w lemma="ὁ">τῷ</w><lb n="6"/> <w lemma="δῆμος">Δήμῳ</w> <w lemma="καθώς">καθῶς</w> <lb n="7"/><persName type="aphrodisian" full="yes"><name reg="Τίτος" type="praenomen">Τίτος</name>  <name reg="Φλάβιος">Φλάβιος</name>  <lb n="8"/><name reg="Σταβεριανός">Σταβερίανος</name></persName>  <w lemma="ἀρχιατρός">ἀρ<lb n="9" type="worddiv"/>χιατρὸς</w>  <w lemma="πόλις">πόλε<lb n="10" type="worddiv"/>ως</w> <w lemma="ὁ">ὁ</w> <w lemma="πατήρ">πατὴρ</w> <w lemma="αὐτός">αὐτοῦ</w><lb n="11"/><w lemma="ὑπισχνέομαι">ὑπέσχετο</w></ab>
