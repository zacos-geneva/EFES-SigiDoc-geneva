      <div type="description" n="monument">
        <head>Description of Monument</head>
        <p>A <rs type="material" key="marmor">white marble</rs> <rs type="objectType">panel</rs>, slightly chipped (<measure type="length" unit="metre" dim="height">0.33</measure>  × <measure type="length" unit="metre" dim="width">031</measure> x
<measure type="length" unit="metre" dim="depth">0.05</measure>).</p>
      </div>

      <div type="description" n="text">
        <head>Description of Text</head>
        <p><rs type="execution" key="scalpro">Inscribed</rs> on the face, which is smooth.</p>
      </div>

      <div type="description" n="letters">
        <head>Description of Letters</head>
        <p>Clear and irregular, av. <measure type="length" unit="metre" dim="height">0.03</measure>; cursive forms; abbreviations <foreign lang="grc">ΙΔΝ</foreign>/, <foreign lang="grc">Η</foreign> over
<foreign lang="grc">Μ</foreign>.</p>
      </div>

      <div type="description" n="date">
        <head>Date</head>
        <p><date exact="none" cert="low" notBefore="0401" notAfter="0600">Fifth-sixth century</date> or later (<rs type="criteria">dating</rs>).</p>
      </div>

