		<l n="1" met="hexameter"><w lemma="οὐδέ">Οὐδὲ</w> <w lemma="θνήσκω">θανὼν</w> <w lemma="κλέος">κλέος</w> <w lemma="ἐσθλός">ἐσθλὸν</w> <w lemma="ἀπόλλυμι">ἀπώλεσας</w> <w lemma="εἰς">ἐς</w> <w lemma="χθών">χθόνα</w> <w lemma="πᾶς">πᾶσαν</w>,</l>
		<l n="2" met="pentameter"><w lemma="ἀλλά">ἀλλ'</w> <w lemma="ἔτι">ἔτι</w> <w lemma="σός">σῆς</w> <w lemma="ψυχή">ψυχῆς</w> <w lemma="ἀγλαός">ἀγλαὰ</w> <w lemma="πᾶς">πᾶντα</w> <w lemma="μένω">μένει</w>,</l>
