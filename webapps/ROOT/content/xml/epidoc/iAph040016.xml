      <div type="description" n="monument">
        <head>Description of Monument</head>
        <p><rs type="material" key="marmor">White marble</rs> <rs type="objectType">column</rs>.</p>
      </div>

      <div type="description" n="text">
        <head>Description of Text</head>
        <p><measure type="length" dim="none">1.35</measure> above base of column.</p>
      </div>

      <div type="description" n="letters">
        <head>Description of Letters</head>
        <p>Letters lunate, irregular, deeply cut but weathered;
<measure type="length" unit="metre" dim="height">0.02-0.03</measure>, cross <measure type="length" unit="metre" dim="height">0.04</measure>.</p>
      </div>

      <div n="date" type="description">
        <head>Date</head><p><date cert="low" notBefore="0401" notAfter="0600">Fifth-sixth century</date> or later (<rs type="criteria">content</rs>, <rs type="criteria">location</rs>)</p>
        </div>

      <div n="text" lang="grc" type="edition">
