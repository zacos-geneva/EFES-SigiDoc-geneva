      <div type="description" n="monument">
        <head>Description of Monument</head>
        <p>A small <rs type="material" key="marmor">white marble</rs> <rs type="objectType">column</rs> base (<measure type="length" unit="metre" dim="height">0.88</measure> × <measure type="length" unit="metre" dim="width">0.50</measure> × <measure type="length" unit="metre" dim="depth">0.48</measure>).</p>
      </div>

      <div type="description" n="text">
        <head>Description of Text</head>
        <p>Cut on north face of base.</p>
      </div>

      <div type="description" n="letters">
        <head>Description of Letters</head>
        <p>Very irregular, <measure type="length" unit="metre" dim="height">0.025-0.046</measure>.</p>
      </div>

      <div n="date" type="description">
        <head>Date</head><p><date cert="low" notAfter="0500" notBefore="0300">Third-fourth centuries A.D.</date> (<rs type="criteria">lettering</rs>, <rs type="criteria">context</rs>)</p>
      </div>

      <div n="text" lang="grc" type="edition">
        <head lang="en">Edition</head>
		<ab>
			<lb n="1"/> <persName key="heortasius1" type="aphrodisian" full="yes"><name reg="Ἑορτάσιος">Ἑορτασίου</name></persName>  <w lemma="κονιορτός">κο<lb n="2" type="worddiv"/>νιορτοῦ</w> 
			<lb n="3"/><w lemma="τόπος">τόπος</w>. </ab>
      </div>

      <div type="translation">
        <head>Translation</head>
        <ab>Place of Heortasios, dirty rogue.</ab>
      </div>

      <div type="commentary">
        <head>Commentary</head>
        <p>See <xref type="eAla-text" n="XI.13">XI.13</xref>.</p>
      </div>

