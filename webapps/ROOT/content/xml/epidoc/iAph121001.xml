              <lb n="6"/>
               <persName type="aphrodisian" key="Monaxius" full="yes"><name reg="Φλάβιος"><expan><abbr>Φλ<orig><g type="scroll"/></orig></abbr><supplied reason="abbreviation">άουιος</supplied></expan></name>
               <name reg="Κυιντίλιος"><expan><abbr>Κυιντ<orig><g type="scroll"/></orig></abbr><supplied reason="abbreviation">ίλιος</supplied></expan></name> <name reg="Ἔρως">Ἔρως</name> <name reg="Μονάξιος">Μονάξιος</name></persName> <g type="stop"/> ὁ <rs type="dignity" key="perfectissimus"><w lemma="διάσημος">διασημότατος</w></rs> <w lemma="ἡγεμών">ἡγε<unclear reason="damage">μὼν</unclear></w>
