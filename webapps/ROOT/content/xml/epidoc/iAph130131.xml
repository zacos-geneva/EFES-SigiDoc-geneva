<ab><cb n="a"/>  <lb n="1"/>  <gap reason="lost" unit="character" extent="28" precision="circa"/> <orig n="unresolved"><unclear reason="damage">διι</unclear></orig> <gap reason="lost" extent="6" precision="circa" unit="character"/> <w><orig n="unresolved"><unclear reason="damage">λ</unclear></orig></w> <gap reason="lost" extent="3" unit="character"/> <w><orig n="unresolved"><unclear reason="damage">ηυμων</unclear></orig></w> <gap reason="lost" extent="unknown" unit="character"/><orig n="unresolved">ον</orig> <w lemma="ἐπί"><unclear reason="damage">ἐ</unclear>πὶ</w> <w lemma="στεφανηφόρος"><unclear reason="damage">σ</unclear>τε<supplied reason="lost">φ</supplied>ανη<supplied reason="lost">φόρου</supplied></w>  <gap reason="lost" extent="unknown" unit="character"/>  <orig n="unresolved"><unclear reason="damage">ου</unclear></orig>  <gap reason="lost" extent="1" unit="character"/><persName type="aphrodisian"><name><supplied reason="lost">Ἑ</supplied><unclear reason="damage">ρμο</unclear>  <gap reason="lost" extent="2" unit="character"/>  <cb n="b"/><lb n="1" type="worddiv"/> κρά <g type="head"/> τους</name></persName>  <lb n="2"/> <w lemma="μείς">μηνὸς</w> <g type="head"/> <rs type="month"><w lemma="Κλαυδιῆος">Κλαυδι<lb n="3" type="worddiv"/>ήου</w></rs></ab>
