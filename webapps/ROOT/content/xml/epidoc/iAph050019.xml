      <div type="description" n="monument">
        <head>Description of Monument</head>
        <p>Several fragments, some joining, from a series of <rs type="material" key="marmor">white marble</rs> <rs type="objectType">revetment</rs> panels, <measure type="length" unit="metre" dim="height">0.36</measure> high.</p>
      </div>

      <div type="description" n="text">
        <head>Description of Text</head>
        <p><rs type="execution" key="scalpro">Inscribed</rs> in one line.</p>
      </div>

      <div type="description" n="letters">
        <head>Description of Letters</head>
        <p><measure type="length" unit="metre" dim="height">0.26</measure>; lunate <term lang="grc-Latn">omega</term>; broad, flat trenches, painted black.</p>
      </div>

      <div type="description" n="date">
        <head>Date</head>
        <p><date exact="none" cert="low" notBefore="0301" notAfter="0600">Fourth to sixth centuries A.D.</date> (<rs type="criteria">lettering</rs>).</p>
      </div>

      <div n="text" lang="grc" type="edition">
        <head lang="en">Edition</head>
		<div type="textpart_fragment" n="a"><ab>
		<lb n="1"/><gap dim="left" extent="unknown" reason="lost" unit="character"/><orig n="unresolved"><unclear reason="damage">ι</unclear></orig> <persName key="Ioannes4" full="yes" type="aphrodisian"><name reg="Ἰωάννης">Ἰωάν<unclear reason="damage">ν</unclear><gap dim="right" extent="unknown" reason="lost" unit="character"/></name></persName>
		</ab></div><div type="textpart_fragment" n="b"><ab><lb n="1"/><w><gap dim="left" extent="unknown" reason="lost" unit="character"/><orig n="unresolved"><unclear reason="damage">ΙΙ</unclear></orig>ς</w> <w lemma="ἀνανεόω">ἀνα<supplied reason="lost">νεωσ</supplied><gap dim="right" extent="unknown" reason="lost" unit="character"/></w></ab></div>
       <div type="textpart_fragment" n="c"><ab><lb n="1"/><gap dim="left" extent="unknown" reason="lost" unit="character"/><orig n="unresolved"><unclear reason="damage">υ</unclear>λαρ</orig><g type="scroll"/> <gap dim="right" extent="unknown" reason="lost" unit="character"/>  </ab></div></div>

