<div type="description" n="monument">
<head>Description of Monument</head>
<p><rs type="material" key="marmor">White marble</rs> <rs type="objectType" reg="block">block</rs> with a drafted margin at top and both sides (<measure type="length" unit="metre" dim="width">0.60</measure>   × <measure type="length" unit="metre" dim="height">1.21</measure> × <measure type="depth" dim="depth">0.44</measure>);</p>
</div>

<div type="description" n="text">
<head>Description of Text</head>
<p><rs type="execution" key="scalpro">Inscribed</rs> on the face.</p>
</div>

<div type="description" n="letters">
<head>Description of Letters</head>
<p><measure type="length" unit="metre" dim="height">
0.02–0.0225</measure>; square sigma, cursive omega</p>
</div>

<div type="description" n="date">
<head>Date</head>

<p>Perhaps <date cert="low" exact="none" notAfter="0100" notBefore="0051">second half of the first century A.D.</date> (<rs type="criteria">lettering</rs>)</p></div>

<div n="text" lang="grc" type="edition">
<head lang="en">Edition</head>

<ab><lb n="1"/> <w lemma="ὁ">ἡ</w> <w lemma="βουλή">βουλὴ</w> <w lemma="καί">καὶ</w> <w lemma="ὁ">ὁ</w> <w lemma="δῆμος">δῆμος</w> <w lemma="καί">καὶ</w> <lb n="2"/> <w lemma="ὁ">ἡ</w> <w lemma="γερουσία">γερουσία</w> <space extent="1" unit="character" dim="horizontal"/> <w lemma="καί">καὶ</w> <w lemma="ὁ">οἱ</w> <w lemma="νέος">νέοι</w> <space extent="1" unit="character" dim="horizontal"/><lb n="3"/> <w lemma="τιμάω">ἐτείμησαν</w> <persName type="aphrodisian"><name reg="Ἄτταλος">Ἄτταλον</name>  <lb n="4"/><persName type="aphrodisian"><name reg="Μακεδών">Μακεδόνος</name> <w lemma="ὁ">τοῦ</w> <persName type="aphrodisian"><name reg="Ἀριστέας">Ἀριστέ<lb n="5" type="worddiv"/>ου</name> <w lemma="ὁ">τοῦ</w> <persName type="aphrodisian"><name reg="Ἀλέξανδρος">Ἀλεξάνδρου</name>  <space extent="1" unit="character" dim="horizontal"/><lb n="6"/><name reg="Ἀπολλωνίδης">Ἀπολλωνίδου</name></persName></persName></persName></persName> <w lemma="διά">διά</w> <w lemma="τε">τε</w> <lb n="7"/> <w lemma="ὁ">τὴν</w> <w lemma="ἴδιος">ἰδίαν</w> <w lemma="ἀρετή">ἀρετὴν</w> <w lemma="καί">καὶ</w> <space extent="1" unit="character" dim="horizontal"/><lb n="8"/> <w lemma="ὁ">τὴν</w> <w lemma="ὁ">τῶν</w> <w lemma="πρόγονος">προγόνων</w> <w lemma="διά">διά</w> <lb n="9"/> <w lemma="τε">τε</w> <w lemma="φιλοδοξία">φιλοδοξιῶν</w> <w lemma="καί">καὶ</w> <w lemma="ἀνάθημα">ἀνα<lb n="10" type="worddiv"/>θημάτων</w> <w lemma="πρός">πρὸς</w> <w lemma="ὁ">τὸν</w> <w lemma="δῆμος">δῆ  <space extent="1" unit="character" dim="horizontal"/><lb n="11" type="worddiv"/>μον</w> <w lemma="εὔνοια">εὔνοιαν</w> <space extent="unknown" unit="character" dim="horizontal"/><lb n="11a"/><space extent="1" unit="line" dim="horizontal"/></ab>
